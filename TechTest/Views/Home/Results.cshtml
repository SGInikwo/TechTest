@model IEnumerable<TechTest.Models.NumberList>

@{
    ViewData["Title"] = "Results";
}
<h1>@ViewData["Title"]</h1>

@* Displaying the data from the database in a card format*@
@if (Model.Count() > 0)
{
    @foreach (var item in Model)
    {
        <div class="card-group" style="margin-bottom: 20px">
            <div class="card">
                <div class="card-header">
                    <p>No @item.Id</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@item.Numbers</li>
                    <li class="list-group-item">@item.direction</li>
                    <li class="list-group-item">@item.time ms</li>
                </ul>
            </div>
        </div>
    }
    @* Sends the user to the SwaggerDoc to download it as a JSON file*@
    <a class="btn btn-primary" style="width:930px" asp-area="" asp-controller="swagger" asp-action="index">JSON</a>
}
else
{
    <p>No items submit yet</p>
}
